{{#if addNewQuestion}}
  <h1>New question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="additional_notes">additional_notes</label>
        {{input value=additional_notes id="additional_notes"}}
      </div>


      <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
