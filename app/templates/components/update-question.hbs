{{#if updateQuestionForm}}
  <h4>Update {{question.content}} {{question.author}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="content">content</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="additional_notes">Additional Notes</label>
        {{input value=additonal_notes id="additonal_notes" placeholder=question.additonal_notes}}
      </div>


      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
